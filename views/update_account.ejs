
<!-- include header -->
<%- include('include/_header') %>
<!-- /include header -->

  <!-- Main Site -->
  <main id="site-main">
    <div class="container">
        <div class="box-nav d-flex justify-between">
           <div class="filter">
               <a href="/"><i class="fas fa-angle-double-left"></i> All Account</a>
           </div>
        </div>
        <div class="form-title text-center">
            <h2 class="text-dark">Update Account</h2>
            <span class="text-light">Use the below form to Update an account</span>
        </div>

        <!-- add account form -->
         <!-- form handling -->
 <form method="POST" id="update_account">
    <div class="new_account">
        <div class="form-group">
            <label for="account" class="text-light">Account</label>
            <input type="hidden" name="id" value="<%= accounts._id%>">
            <input type="text" name="account" value="<%= accounts.account %>" placeholder="nhatphong9715@gmail.com">
        </div>
        <div class="form-group">
            <label for="password" class="text-light">Password</label>
            <input type="text" name="password" value="<%= accounts.password%>" placeholder="********">
        </div>
        <div class="form-group">
            <label for="type" class="text-light">Type</label>
            <select name="type" id="type_account">
                <option value="Gmail" <%= accounts.type == 'Gmail' ? 'selected' : '' %>>Gmail</option>
                <option value="Facebook"<%= accounts.type == 'Facebook' ? 'selected' : '' %>>Facebook</option>
                <option value="Github"<%= accounts.type == 'Github' ? 'selected' : '' %>>Github</option>
                <option value="Twitter"<%= accounts.type == 'Twitter' ? 'selected' : '' %>>Twitter</option>
                <option value="Discord"<%= accounts.type == 'Discord' ? 'selected' : '' %>>Discord</option>
              </select>
            </div>
        <div class="form-group">
            <label for="status" class="text-light">Status</label>
            <div class="radio inline">
                <input type="radio" id="radio-4" name="status" value="Active" <%= accounts.status == 'Active' ? 'checked' : '' %> >
                <label for="radio-4" class="radio-label">Active</label>
            </div>
            <div class="radio inline">
                <input type="radio" id="radio-5" name="status" value="Inactive" <%= accounts.status == 'Inactive' ? 'checked' : '' %> >
                <label for="radio-5" class="radio-label">Inactive</label>
            </div>
        </div>

        <div class="form-group">
            <button type="submit" class="btn text-dark update">Save</button>
        </div>

    </div>
</form>
       
    </div>
</main>
<!-- /Main Site -->

<!-- include footer -->
<%- include('include/_footer') %>
<!-- /include footer -->